@model HealthCorp.Core.Entities.Patient

@{
    ViewData["Title"] = "Details";
}

<h1>Patient Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName @Model.LastName
        </dd>
        <dt class = "col-sm-2">
            Date of Birth
        </dt>
        <dd class = "col-sm-10">
            @Model.DateOfBirth.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            SSN
        </dt>
        <dd class = "col-sm-10">
            @* VULNERABILITY: PII Exposure *@
            @Html.DisplayFor(model => model.SSN)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
             @* VULNERABILITY: XSS possibility if outputting raw, though DisplayFor encodes.
                Let's add a raw output section for notes if we had them, or assume Address might contain XSS if injected.
             *@
            @Model.Address
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
